

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Messages People Have Sent Us</h3></div>


  <!-- Table -->
  <table class="table table-hover">

    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @responses.each do |response| %>
        <tr class="response_<%= response.id %>">
          <td><%= response.first_name %></td>
          <td><%= response.last_name %></td>
          <td><%= response.email %></td>
          <td><%= response.subject %></td>
          <td><%= response.description %></td>
          <td><%= link_to 'Show', response %></td>
          <td><%= link_to 'Edit', edit_response_path(response) %></td>
          <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>



<br>


<%= link_to 'Contact Us', new_response_path, class: 'btn btn-primary' %>
